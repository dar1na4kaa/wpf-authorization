<Page x:Class="author.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:author"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="600"
      Title="LoginPage">

    <Grid Background="#F0F0F0" Margin="20">
        <StackPanel Background="White">
            <TextBlock Text="Вход в систему" FontSize="20" FontWeight="Bold" Foreground="#333" Margin="0 0 0 20" />

            <TextBlock Text="Логин:" FontWeight="Bold" />
            <TextBox x:Name="LoginTextBox" Margin="0 5 0 15" />

            <TextBlock Text="Пароль:" FontWeight="Bold" />
            <PasswordBox x:Name="PasswordBox" Margin="0 5 0 20" />

            <Button Content="Войти" Background="Green" Foreground="White" Padding="10" Click="LoginButton_Click" />
            <Button Content="Регистрация" Background="Blue" Foreground="White" Padding="10" Margin="0 10 0 0" Click="GoToRegistrationPage_Click" />
        </StackPanel>
    </Grid>
</Page>
