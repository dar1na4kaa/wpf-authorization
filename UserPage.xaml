<Page x:Class="author.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:author"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserPage">

    <Grid>
        <Grid Background="#F0F0F0" Margin="20">
            <StackPanel Background="White">
                <TextBlock Text="Панель пользователя" FontSize="20" FontWeight="Bold" Foreground="#333" Margin="0 0 0 20" />
                <TextBlock x:Name="UserTextBlock" Text="Аккаунт не подтвержден !" FontWeight="Bold" Margin="0 0 0 10" Foreground="Red" />
                <Button Content="Выйти" Background="Orange" Foreground="White" Padding="10" Click="Back_Click" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>
